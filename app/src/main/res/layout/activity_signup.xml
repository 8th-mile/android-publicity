<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#223548"
    tools:context="com.a8thmile.rvce.a8thmile.ui.Activities.LoginActivity"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    >


    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        app:mtf_image="@drawable/name"
        app:mtf_animationDuration="100"
        android:layout_centerVertical="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"

        >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:id="@+id/nameEditText"
        android:textColor="#333"
        android:textColorHint="#666"
        android:textSize="15sp"
        android:inputType="text"
        android:maxLines="1"
        />

    </com.github.florent37.materialtextfield.MaterialTextField>

    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        app:mtf_image="@drawable/email"
        app:mtf_animationDuration="100"
        android:layout_centerVertical="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/name"
        android:layout_marginTop="10dp"

        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email address"
            android:textColor="#333"
            android:id="@+id/emailEditText"
            android:textColorHint="#666"
            android:textSize="15sp"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            />

    </com.github.florent37.materialtextfield.MaterialTextField>


    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/phoneno"
        app:mtf_image="@drawable/phone"
        app:mtf_animationDuration="100"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/email"
        android:layout_marginTop="10dp"

        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone number"
            android:id="@+id/phoneEditText"
            android:textColor="#333"
            android:textColorHint="#666"
            android:textSize="15sp"
            android:inputType="number"
            android:maxLines="1"
            />

    </com.github.florent37.materialtextfield.MaterialTextField>



    <com.dd.CircularProgressButton
        android:id="@+id/btnWithText"
        android:layout_width="196dp"
        android:layout_height="64dp"
        app:cpb_cornerRadius="48dp"
        android:textColor="#ffff"
        android:textSize="25sp"

        app:cpb_textError="Network Error"
        app:cpb_textIdle="Get OTP"
        app:cpb_colorProgress="#00ffffff"
        android:layout_marginTop="40dp"
        android:textStyle="bold"

        android:layout_below="@+id/phoneno"
        android:layout_centerHorizontal="true"
        app:cpb_iconComplete="@drawable/forward"
        />

</RelativeLayout>

