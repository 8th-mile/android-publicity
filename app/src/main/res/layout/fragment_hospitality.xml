            android:scaleType="fitXY"/>

    </LinearLayout>
    <ExpandableListView android:id="@+id/lvExp"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:gravity="center_horizontal"></ExpandableListView>
</LinearLayout>