<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"


    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"

        android:background="@drawable/layout_bg" />


    <TextView
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:id="@+id/trans_text"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:id="@+id/scroll_view"
        android:layout_below="@+id/trans_text"
        android:layout_height="fill_parent"
        android:background="@drawable/layout_bg"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                >
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/texcol"

                android:text="About"
                android:textStyle="bold"
                android:id="@+id/abouts"
                android:textSize="20sp"/>

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/about"
                android:text="About"
                android:layout_below="@+id/abouts"
                android:layout_marginLeft="10dp"
                android:textColor="@color/texcol"
                    fontPath="fonts/Exo2-Light.otf"
                android:textSize="16sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Timings"
                    android:textColor="@color/texcol"
                    android:id="@+id/timings"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/timings"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/texcol"
                    android:textSize="16sp"
                    fontPath="fonts/Exo2-Light.otf"
                    android:id="@+id/date"
                    android:text="Sun, 26 Mar 2017 11.00"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/priceText"

                    android:textColor="@color/texcol"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Entry Fees"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/price"
                    android:layout_below="@+id/priceText"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/texcol"
                    android:textSize="16sp"
                    fontPath="fonts/Exo2-Light.otf"


                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
              >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1st Prize"
                        android:id="@+id/firstText"
                        android:textStyle="bold"
                        android:textSize="20sp"

                        android:textColor="@color/texcol"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/first"
                        android:layout_below="@+id/firstText"
                        android:textSize="16sp"
                        fontPath="fonts/Exo2-Light.otf"
                        android:textColor="@color/texcol"
                        android:text="1000"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="2nd Prize"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:id="@+id/secondText"
                        android:textColor="@color/texcol"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/second"
                        fontPath="fonts/Exo2-Light.otf"
                        android:layout_below="@+id/secondText"
                        android:textSize="16sp"
                        android:textColor="@color/texcol"
                        android:text="500"/>
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                >
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/texcol"

                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="Rules"
                android:textStyle="bold"
                android:id="@+id/rule"
                />



              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/rules"
                  android:layout_marginLeft="10dp"
                  android:text="Rules"
                  android:layout_below="@+id/rule"
                  android:textColor="@color/texcol"
                  fontPath="fonts/Exo2-Light.otf"
                  android:textSize="16sp"/>

                </RelativeLayout>








        </LinearLayout>

    </ScrollView>





</RelativeLayout>
