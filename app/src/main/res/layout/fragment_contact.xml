<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@drawable/gradient">
    <com.ramotion.foldingcell.FoldingCell
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/folding_cell"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        folding-cell:backSideColor="#9adfd2"
        >
        ​
        <FrameLayout
            android:id="@+id/cell_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5fb1a2"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/technical"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:text="Phone No"
                />
        </FrameLayout>
        ​
        <FrameLayout
            android:id="@+id/cell_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#FF3F7B70"
                android:text="CONVENERS"
                android:textSize="25sp"
                android:gravity="center"
                android:textStyle="bold"
                />
        </FrameLayout>
        ​
    </com.ramotion.foldingcell.FoldingCell>

    <com.ramotion.foldingcell.FoldingCell
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/folding_cell2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/folding_cell"
        android:layout_centerHorizontal="true"
        folding-cell:backSideColor="#9adfd2"
        android:layout_marginTop="10dp"
        >
        ​
        <FrameLayout
            android:id="@+id/cell_content_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5fb1a2"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/technical"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:text="Phone No"
                />
        </FrameLayout>
        ​
        <FrameLayout
            android:id="@+id/cell_title_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#FF3F7B70"
                android:text="EVENT HEADS"
                android:textSize="25sp"
                android:gravity="center"
                android:textStyle="bold"
                />
        </FrameLayout>
        ​
    </com.ramotion.foldingcell.FoldingCell>

    <com.ramotion.foldingcell.FoldingCell
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/folding_cell3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/folding_cell2"
        android:layout_centerHorizontal="true"
        folding-cell:backSideColor="#9adfd2"
        android:layout_marginTop="10dp"
        >
        ​
        <FrameLayout
            android:id="@+id/cell_content_view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5fb1a2"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/technical"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:text="Phone No"
                />
        </FrameLayout>
        ​
        <FrameLayout
            android:id="@+id/cell_title_view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"

                android:background="#FF3F7B70"
                android:text="TECHNICAL TEAM"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                />
        </FrameLayout>
        ​
    </com.ramotion.foldingcell.FoldingCell>



</RelativeLayout>
