<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:background="@drawable/gradient">

        <com.ramotion.foldingcell.FoldingCell
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/folding_cell"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            folding-cell:backSideColor="#9adfd2"
            >

            <FrameLayout
                android:id="@+id/cell_content_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#5fb1a2"
                android:visibility="gone">
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_height="40dp"
                        android:weightSum="15">
                        <TextView

                            android:layout_width="0dp"
                            android:layout_weight="12"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:text="Amrit Ashu"
                            />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:id="@+id/cOne"
                            android:src="@drawable/ic_call_white_24dp"
                            android:layout_height="30dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:weightSum="15">
                        <TextView

                            android:layout_width="0dp"
                            android:layout_weight="12"
                            android:layout_height="match_parent"
                            android:paddingLeft="25dp"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:text="Shantanu Pandey"
                            />
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:id="@+id/cTwo"
                            android:src="@drawable/ic_call_white_24dp"
                            android:layout_height="30dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:weightSum="15">
                        <TextView

                            android:layout_width="0dp"
                            android:layout_weight="12"
                            android:layout_height="match_parent"
                            android:paddingLeft="25dp"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:text="Deepak Bhat"
                            />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:id="@+id/cThree"
                            android:src="@drawable/ic_call_white_24dp"
                            android:layout_height="30dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:weightSum="15">
                        <TextView

                            android:layout_width="0dp"
                            android:layout_weight="12"
                            android:paddingLeft="25dp"
                            android:layout_height="match_parent"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:text="Amogh Shetty"
                            />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:id="@+id/cFour"
                            android:src="@drawable/ic_call_white_24dp"
                            android:layout_height="30dp" />
                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>
            ​
            <FrameLayout
                android:id="@+id/cell_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#FF3F7B70"
                    android:text="CONVENERS"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
            </FrameLayout>
            ​
        </com.ramotion.foldingcell.FoldingCell>

        <com.ramotion.foldingcell.FoldingCell
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/folding_cell2"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/folding_cell"
            android:layout_centerHorizontal="true"
            folding-cell:backSideColor="#9adfd2"
            android:layout_marginTop="10dp"
            >
            ​
            <FrameLayout
                android:id="@+id/cell_content_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#5fb1a2"
                android:visibility="gone">
                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/mam"
                        android:layout_centerHorizontal="true"
                        app:civ_border_width="3dp"
                        app:civ_border_color="#FFFFFFFF"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:id="@+id/layout_mam"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_image1"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/mamtext"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:text="Sudha Kamath"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_alignRight="@+id/mamtext"
                            android:id="@+id/fOne"
                            android:paddingRight="10dp"
                            android:src="@drawable/ic_call_white_24dp"
                            android:layout_height="30dp" />
                    </RelativeLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/sir"
                        android:layout_below="@+id/layout_mam"
                        app:civ_border_width="3dp"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        app:civ_border_color="#FFFFFFFF"/>

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_image2"
                        >
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:id="@+id/sirtext"
                            android:textColor="@color/white"
                            android:text="D N Awadhani"

                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:paddingRight="10dp"
                            android:layout_alignRight="@+id/sirtext"
                            android:id="@+id/fTwo"
                            android:src="@drawable/ic_call_white_24dp"
                            android:layout_height="30dp" />
                    </RelativeLayout>


                </RelativeLayout>
            </FrameLayout>
            ​
            <FrameLayout
                android:id="@+id/cell_title_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#FF3F7B70"
                    android:text="FACULTY COORDINATORS"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
            </FrameLayout>
            ​
        </com.ramotion.foldingcell.FoldingCell>

        <com.ramotion.foldingcell.FoldingCell
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/folding_cell3"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/folding_cell2"
            android:layout_centerHorizontal="true"
            folding-cell:backSideColor="#9adfd2"
            android:layout_marginTop="10dp"
            >
            ​
            <FrameLayout
                android:id="@+id/cell_content_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#5fb1a2"
                android:visibility="gone">

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_height="40dp"
                        android:weightSum="15">
                        <TextView

                            android:layout_width="0dp"
                            android:layout_weight="12"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:text="Akash Shakdweepia"
                            />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:id="@+id/tOne"
                            android:src="@drawable/ic_call_white_24dp"
                            android:layout_height="30dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:weightSum="15">
                        <TextView

                            android:layout_width="0dp"
                            android:layout_weight="12"
                            android:layout_height="match_parent"
                            android:paddingLeft="25dp"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:text="Suyash Singh"
                            />
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:id="@+id/tTwo"
                            android:src="@drawable/ic_call_white_24dp"
                            android:layout_height="30dp" />
                    </LinearLayout>
                </LinearLayout>


            </FrameLayout>
            ​
            <FrameLayout
                android:id="@+id/cell_title_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    android:background="#FF3F7B70"
                    android:text="TECHNICAL HEADS"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
            </FrameLayout>
            ​
        </com.ramotion.foldingcell.FoldingCell>

        <com.ramotion.foldingcell.FoldingCell
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/folding_cell4"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/folding_cell3"
            android:layout_centerHorizontal="true"
            folding-cell:backSideColor="#9adfd2"
            android:layout_marginTop="10dp"
            >
            ​
            <FrameLayout
                android:id="@+id/cell_content_view4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#5fb1a2"
                android:visibility="gone">

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_height="40dp"
                        android:weightSum="15">
                        <TextView

                            android:layout_width="0dp"
                            android:layout_weight="15"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:text="Vignesh R"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:weightSum="15">
                        <TextView

                            android:layout_width="0dp"
                            android:layout_weight="15"
                            android:layout_height="match_parent"
                            android:paddingLeft="25dp"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:text="Alekh Karkada Ashok"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:weightSum="15">
                        <TextView

                            android:layout_width="0dp"
                            android:layout_weight="15"
                            android:layout_height="match_parent"
                            android:paddingLeft="25dp"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:text="Nikhil Agrawal"
                            />

                    </LinearLayout>
                </LinearLayout>


            </FrameLayout>
            ​
            <FrameLayout
                android:id="@+id/cell_title_view4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    android:background="#FF3F7B70"
                    android:text="APP DEV TEAM"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
            </FrameLayout>
            ​
        </com.ramotion.foldingcell.FoldingCell>



    </RelativeLayout>
</ScrollView>